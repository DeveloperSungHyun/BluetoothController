<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RelativeLayout_test"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="22dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center|right"
            android:layout_toRightOf="@+id/RelativeLayout_test">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_InputType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:rippleColor="#2196F3"
                android:backgroundTint="#69D1FF" />

            <Switch
                android:id="@+id/Switch_InputType2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:thumb="@drawable/customize_switch2_thumb"
                android:track="@drawable/customize_switch2_selector" />

            <SeekBar
                android:id="@+id/SeekBar_InputType3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="700dp"
                android:minWidth="300dp"/>


        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        />
</LinearLayout>